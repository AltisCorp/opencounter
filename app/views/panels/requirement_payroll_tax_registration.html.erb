<label>
  Year:
  <input type="text">
</label>

<label>
  First payroll date:
  <input type="text">
</label>


<label>
  Have you ever owned or been a principal owner in a business registered with EED?
  <select name="is_eed_business_owner">
    <option value="y">Yes</option>
    <option value="n">No</option>
  </select>
</label>

<!-- @condition is_eed_business_owner == y -->
<label>
  Former EED account number:
  <input type="text">
</label>

<!-- @condition is_eed_business_owner == y -->
<label>
  Former business name:
  <input type="text">
</label>

<!-- @condition is_eed_business_owner == y -->
<label>
  Former business address:
  <input type="text">
</label>

<label>
  This is an application for a...
  <select id="application_type">
    <option value="new">New business</option>
    <option value="hired">Business that has hired employees for the first time</option>
    <option value="purchased">Purchased business</option>
  </select>
</label>

<!-- @condition application_type == purchased -->
<label>
  Did you purchase all or part of the business?
  <select name="portion_of_business_purchased">
    <option value="all">I purchased all of the business</option>
    <option value="part">I purchased part of the business</option>
  </select>
</label>

<!-- @condition application_type == purchased -->
<label>
  Previous owner name:
  <input type="text">
