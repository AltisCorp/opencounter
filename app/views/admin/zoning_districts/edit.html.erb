<h1>Editing Zoning District</h1>

<%= form_for(:zoning_district, :url => admin_zoning_district_path(@zoning_district), :html => {:method => :put}) do |f| %>
  <% if @zoning_district.errors.any? -%>
    <div id='error_explanation'>
      <h2><%= pluralize(@zoning_district.errors.count, "error") -%> prohibited this county from being saved:"</h2>
      <ul>
        <% @zoning_district.errors.full_messages.each do |msg| -%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <br />
    <%= f.check_box :home_occ_prohibited %> Home Occ Prohibited?
  </div>

  <div class="actions">
    <br />
    <%= f.submit 'Save', :class => 'btn btn-success btn-large' %>
    &nbsp;&nbsp;
    <%= link_to 'Cancel', admin_zoning_districts_path %>
  </div>
<% end -%>