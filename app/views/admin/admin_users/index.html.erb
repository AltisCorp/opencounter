<div class="page-header">
  <h1>Admin Users</h1>
</div>

<table class="table table-striped">
  <thead>
    <th>Email</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </thead>
  <tbody>
  <% for user in @admin_users %>
    <tr class="<%= cycle("odd", "even") -%>">
      <td><%= user.email %></td>
      <td width="40px"><%= link_to 'Edit', edit_admin_admin_user_path(user), :class => 'btn btn-mini' %></td>
      <td width="60px"><%= button_to 'Delete', admin_admin_user_path(user), :method => :delete, :confirm => 'Delete this User?', :class => 'btn btn-mini btn-danger' %></td>
      
    </tr>
  <% end -%>
  </tbody>
</table>

<div>
  <%= link_to 'New User', new_admin_admin_user_path, :class => 'btn btn-success' %>
</div>
